[includeIf "gitdir:~/Developement/perso/"]
  path = .gitconfig-perso
[includeIf "gitdir:~/Developement/Projects/dotfiles/"]
  path = .gitconfig-perso
[alias]
  ctags = !.git/hooks/ctags
  lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=human
  st = status -sbu
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  merge-branch = !git checkout master && git merge @{-1} --ff-only
  rebase-origin = !git fetch origin && git rebase origin/master
[blame]
  date = format:%d/%m/%y %H:%M
  abbrev = 7
[core]
	excludesfile = /Users/djtal/Developement/Projects/gitignore/Global/OSX.gitignore
  abbrev = 7
[hub]
  protocol = https
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[push]
	default = upstream
[color]
	ui = true
[pull]
	rebase = merges
[init]
  templatedir = ~/.git_template
[diff]
	wordRegex = .
	mnemonicprefix = true
[status]
	showUntrackedFiles = all
[mergetool]
	prompt = false
[color]
  pager = true
  ui = auto
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
